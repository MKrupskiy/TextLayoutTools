<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="color">@color/color</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:buttonTint">@color/buttonBackground</item>
        <item name="android:colorBackground">@color/windowBackground</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyle</item>
    </style>
    <!-- Dark -->
    <style name="AppThemeDarkSettings" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/dark_colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_colorPrimaryDark</item>
        <item name="colorAccent">@color/dark_colorAccent</item>
        <item name="color">@color/dark_color</item>
        <item name="android:textColorPrimary">@color/dark_textColorPrimary</item>
        <item name="android:textColorSecondary">@color/dark_textColorSecondary</item>
        <item name="android:windowBackground">@color/dark_windowBackground</item>
        <item name="android:buttonTint">@color/dark_buttonBackground</item>
        <item name="android:colorBackground">@color/dark_windowBackground</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyle.Dark</item>
    </style>
    <style name="AppThemeDark" parent="AppThemeDarkSettings">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Blue -->
    <style name="AppThemeBlueSettings" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue_colorPrimary</item>
        <item name="colorPrimaryDark">@color/blue_colorPrimaryDark</item>
        <item name="colorAccent">@color/blue_colorAccent</item>
        <item name="color">@color/blue_color</item>
        <item name="android:textColorPrimary">@color/blue_textColorPrimary</item>
        <item name="android:textColorSecondary">@color/blue_textColorSecondary</item>
        <item name="android:windowBackground">@color/blue_windowBackground</item>
        <item name="android:buttonTint">@color/blue_buttonBackground</item>
        <item name="android:colorBackground">@color/blue_windowBackground</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyle.Blue</item>
    </style>
    <style name="AppThemeBlue" parent="AppThemeBlueSettings">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
    </style>


    <!-- Menu -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:textColor">@color/color</item>
        <item name="android:colorBackground">@color/windowBackground</item>
    </style>
    <style name="AppTheme.PopupOverlay.Dark" parent="AppTheme.PopupOverlay" >
        <item name="android:textColor">@color/dark_color</item>
        <item name="android:colorBackground">@color/dark_windowBackground</item>
    </style>
    <style name="AppTheme.PopupOverlay.Blue" parent="AppTheme.PopupOverlay" >
        <item name="android:textColor">@color/blue_color</item>
        <item name="android:colorBackground">@color/blue_windowBackground</item>
    </style>


    <!-- Dialogs -->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/windowBackground</item>
        <item name="android:textColorAlertDialogListItem">@color/textColorPrimary</item>
    </style>
    <style name="AlertDialogStyle.Dark" parent="AlertDialogStyle">
        <item name="android:textColorPrimary">@color/dark_textColorPrimary</item>
        <item name="colorAccent">@color/dark_colorAccent</item>
        <item name="android:background">@color/dark_windowBackground</item>
        <item name="android:textColorAlertDialogListItem">@color/dark_textColorPrimary</item>
    </style>
    <style name="AlertDialogStyle.Blue" parent="AlertDialogStyle">
        <item name="android:textColorPrimary">@color/blue_textColorPrimary</item>
        <item name="colorAccent">@color/blue_colorAccent</item>
        <item name="android:background">@color/blue_windowBackground</item>
        <item name="android:textColorAlertDialogListItem">@color/blue_textColorPrimary</item>
    </style>


    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
