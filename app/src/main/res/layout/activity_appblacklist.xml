<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppsBlackListActivity">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/appblacklist_swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AppsBlackListActivity" >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/appblacklist_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layoutAnimation="@anim/recycler_layout_anim"
            tools:listitem="@layout/content_appblacklist_item" />

    </android.support.v4.widget.SwipeRefreshLayout>

</android.support.constraint.ConstraintLayout>